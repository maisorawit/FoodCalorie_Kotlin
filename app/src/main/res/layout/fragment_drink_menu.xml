<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/base"
        tools:context=".DrinkMenuFragment">

        <Button
            android:id="@+id/button_juice"
            android:layout_width="@dimen/circle_size"
            android:layout_height="@dimen/circle_size"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/drink_juice"
            app:layout_constraintEnd_toStartOf="@+id/button_soda"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button_soda"
            android:layout_width="@dimen/circle_size"
            android:layout_height="@dimen/circle_size"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/drink_soda"
            app:layout_constraintBaseline_toBaselineOf="@+id/button_juice"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/button_juice" />

        <Button
            android:id="@+id/button_coffee"
            android:layout_width="@dimen/circle_size"
            android:layout_height="@dimen/circle_size"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/coffee"
            app:layout_constraintEnd_toStartOf="@+id/button_alcohol"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_juice" />

        <Button
            android:id="@+id/button_alcohol"
            android:layout_width="@dimen/circle_size"
            android:layout_height="@dimen/circle_size"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/drink_alcohol"
            app:layout_constraintBaseline_toBaselineOf="@+id/button_coffee"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/button_coffee" />

        <TextView
            android:id="@+id/textView_soda"
            android:layout_width="@dimen/circle_size"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:gravity="center"
            android:text="@string/text_soda"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="@dimen/text_nameicon"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView_juice"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/textView_juice" />

        <TextView
            android:id="@+id/textView_juice"
            android:layout_width="@dimen/circle_size"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:gravity="center"
            android:text="@string/text_juice"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="@dimen/text_nameicon"
            app:layout_constraintEnd_toStartOf="@+id/textView_soda"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_juice" />

        <TextView
            android:id="@+id/textView_coffee"
            android:layout_width="@dimen/circle_size"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:gravity="center"
            android:text="@string/text_coffee"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="@dimen/text_nameicon"
            app:layout_constraintEnd_toStartOf="@+id/textView_alcohol"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_coffee" />

        <TextView
            android:id="@+id/textView_alcohol"
            android:layout_width="@dimen/circle_size"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:gravity="center"
            android:text="@string/text_alcohol"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="@dimen/text_nameicon"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView_coffee"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/textView_coffee" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
